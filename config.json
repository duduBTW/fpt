{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "src",
      "files": [
        {
          "destination": "variables/_variables.css",
          "format": "css/variables"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "src",
      "files": [
        {
          "destination": "variables/_variables.js",
          "format": "javascript/es6"
        }
      ]
    }
  }
}
